<div class="d-flex border-bottom border-top p-2 mt-3 text-muted justify-content-between" id="blog_react_btns">
  <div class="d-flex">
    <%= add_like_btn(blog.id, 'Blog').html_safe %>
    <span class="align-self-center fw-bold">.</span>
    <span class="align-self-center px-2"><%= display_count(blog.likes.count, 'like') %></span>
  </div>
  <div class="d-flex">
    <a href="#new_comment_form", class="text-muted display-6 px-2"><i class="bi bi-chat-right-dots"></i></a>
    <span class="align-self-center fw-bold">.</span>
    <span class="align-self-center px-2"><%= display_count(blog.comments.count, 'comment') %></span>
  </div>
</div>