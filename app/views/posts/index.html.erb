<div class="home-div" >
  <div class="row pb-4">
    <div class="col">
      <% if current_user.posts.present? %>
        <h3> Your Posts</h3>
      <% else %>
        <h3> Continue writing some amazing content</h3>
      <% end %>
    </div>
    <div class="col align-self-center text-end"><%= link_to "Crete New Post", new_user_post_path, class: "btn btn-success" %></div>
  </div>

  <div class="border border-success border-2 p-2 mb-3">
    <h3 class="text-success">Filter</h3>
    <div class="row">
      <%= link_to 'All Posts', user_posts_path(current_user), class: "btn btn-outline-success m-2 col" %>
      <%= link_to 'Only Scheduled Posts', user_posts_path(current_user, :query =>'scheduled_posts'), class: "btn btn-outline-success m-2 col" %>
      <%= link_to 'Only Draft Posts', user_posts_path(current_user, :query =>'draft_posts'), class: "btn btn-outline-success m-2 col" %>
    </div>
  </div>

  
  <div id="posts_list">
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </div>
</div>
