<div data-controller="posts">
  <%= form_with model: [:user, post] do |form| %>
    <%= form.text_field :title, placeholder: 'Title for blog' %>
    <div data-posts-target="quillEditor"></div>
    <%= form.hidden_field :content, id: "post_content" %>
    <%= form.text_field :summary, placeholder: 'Summary for blog' %>
    <%= form.text_field :video_link, placeholder: 'Any video link for blog' %>
    <%= form.text_field :slug, placeholder: 'slug for blog' %>
    <%= form.select :status, { 'General' => 'general', 'Feature' => 'featured', 'Archived' => 'archived' }%>
    <%= form.number_field :read_time, placeholder: '8 Min Read', step: 0.5  %>
    <%= form.select :category_id, @categories %>
    <%= form.datetime_select :published_at, include_blank: true %>
    <%= form.submit %>
  <% end %>
</div>
