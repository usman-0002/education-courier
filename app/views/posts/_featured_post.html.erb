<div class="col">
  <div class="pb-2">
    <%= image_tag("user_avatar.png", class: "rounded-circle post-circle-img") %> 
    <span><%= post.user.name %></span>
  </div>
  <h5 class="fw-bold"><%= link_to post.title, post, class: "text-decoration-none" %></h5>
  <small class="text-muted"><%= date_format(post.published_at) %> | <%= post.read_time %> min read </small>
</div>